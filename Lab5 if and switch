


// If else 



#include <stdio.h>
 int main(){
       int score = 0 ;
       printf( "Please enter your score : " ) ;
       scanf( "%d" , &score);
       printf( " Grade : " ) ;
        if ( score >= 80 )
        {
            printf( " A " ) ;
        } else if ( score >= 75 && score < 80 ){
            printf( " B+ " ) ;
        } else if ( score >= 70 && score < 75 ){
            printf( " B " ) ;
        } else if ( score >= 65 && score < 70){
            printf( " C+ ") ;
        } else if ( score >= 60 && score < 65){
            printf( " C " ) ;
        } else if ( score >= 55 && score < 60 ){
            printf( " D+ " ) ; 
        } else if ( score >= 50 && score < 55){
            printf( " D " ) ;
        } else { 
            printf( " F " ) ;
        }// End if 

    return 0 ;
    
 } // End Function 



/*
    ผู้ใช้กรอกค่า "คะแนนดิบ" เข้ามาในระบบเพื่อต้องการตรวจสอบเกรดในรายวิชา Programming ซึ่งมีเกณฑ์การให้คะแนนคือ F อยู่ในช่วงคะแนนน้อยกว่า 50 , D อยู่ในช่วงระหว่าง 50 ถึง 55 , D+ อยู่ในช่วงระหว่าง 55 ถึง 60 , C อยู่ในช่วงระหว่าง 60 ถึง 65 , C+ อยู่ในช่วงระหว่าง 65 ถึง 70 , B อยู่ในช่วงระหว่าง 70 ถึง 75 , B+ อยู่ในช่วงระหว่าง 75 ถึง 80 , A อยู่ในช่วงคะแนนมากกว่า 80 ขึ้นไป
    (กำหนดให้ข้อนี้ใช้คำสั่ง if else ได้เท่านั้น)
    
    Test case:
        enter score :
            80
    Output:
        A !

    Test case:
        enter score :
            55
    Output:
        D+ !

    Test case:
        enter score :
            64
    Output:
        C !

    Test case:
        enter score :
            44
    Output:
        F !

    Test case:
        enter score :
            hello
    Output:
        please enter number only.




 //switch case 




#include <stdio.h>
 int main(){
       int score = 0 ;
       printf( "Please enter your score : " ) ;
       scanf( "%d" , &score);
       printf( " Grade : " ) ;
        {
            switch ( score )
            {
            case '>=80' :
              printf ( " A " ) ;
              break ;
            case '>= 75 && < 80' :
              printf ( " B+" ) ;
              break ;
            case '>= 70 && < 75 ' :
              printf ( " B+ " ) ;
              break ;
            case ' >= 65 && < 70 ' :
              printf ( " C+ " ) ;
              break ;
            case '>= 60 && < 65 ' :
              printf ( " C " ) ;
              break ;
            case ' >= 55 &&  < 60 ' : 
              printf ( " D+ " ) ;
              break ;
            case ' >= 50 && < 55 ' :
              printf ( " D " ) ;
              break ; 
                       default :
                printf( " F " ) ;
                break ; 
            }// End Switch
        }

    return 0 ;
    
 }  // End Function

 
            
            
        



   

 
            
            
        



   
